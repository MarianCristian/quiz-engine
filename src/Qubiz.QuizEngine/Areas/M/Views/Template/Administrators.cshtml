
@{
    ViewBag.Title = "Administrators";
}
@{ var currentUser = User.Identity.Name;}
<div class="container qubiz-container">

    <md-input-container flex="" class="col-md-4 col-md-offset-1">
        <label class="qubiz-search-label">
            Search Admin
            <i class="material-icons">search</i>
        </label>
        <input valign="bottom" type="text" ng-model="searchAdmin">
    </md-input-container>

    <md-button class="CustomButton md-primary col-md-1 col-md-offset-4 qubiz-add-button" ng-href="#/saveadmin/{{AdminCtrl.Guid}}">
        Add
    </md-button>

    <table class="mdl-data-table mdl-js-data-table mdl-shadow--2dp col-md-9 col-md-offset-1">
        <tbody>
            <tr ng-repeat="admin in AdminCtrl.admins | filter:searchAdmin" class="repeated-item" flex="">
                <td class="qubiz-table-text-align">{{admin.Name}}</td>
                {{admin.Name}}
                <td ng-if="admin.Name != '@currentUser.Substring(6)'">
                    <i class="material-icons2 btn-primary qubiz-edit-button" ng-click="showConfirm($event,admin)">delete</i>
                    <a class="material-icons2 btn-primary" ng-href="#/saveadmin/{{admin.ID}}">mode_edit</a>
                </td>
                <td ng-if="admin.Name == '@currentUser.Substring(6)'">
                    <i class="material-icons2 btn-primary-disabled" ng-click="return false">delete</i>
                    <i class="material-icons2 btn-primary-disabled" ng-click="return false">mode_edit</i>
                </td>
            </tr>
        </tbody>
    </table>

</div>
<div class="md-padding dialogdemoBasicUsage" id="popupContainer" ng-cloak="">

    <div ng-if="status" id="status">
        <b layout="row" layout-align="center center" class="md-padding">
            {{status}}
        </b>
    </div>
</div>