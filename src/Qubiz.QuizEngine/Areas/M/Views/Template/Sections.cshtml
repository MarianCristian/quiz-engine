
@{
    ViewBag.Title = "Sections";
}
<div class="container" style="padding-top: 2%">
	<md-input-container flex="" class="col-md-4 col-md-offset-1">
		<label style="font-size: 30px; font-weight: 300; padding-left: 5%">
			Search section
			<i class="material-icons">search</i>
		</label>
		<input valign="bottom" type="text" ng-model="searchSection">
	</md-input-container>
	<md-button class="CustomButton md-primary col-md-1 col-md-offset-4" style="margin-left: 30.9%; min-width: 10% !important;" ng-href="#/addSection">
		Add
	</md-button>
	
	<table class="mdl-data-table mdl-js-data-table mdl-shadow--2dp qubiz-table col-md-9 col-md-offset-1">
		<thead>
		</thead>
		<tbody>
			<tr ng-repeat="section in SectionsCtrl.sections | filter:searchSection" class="repeated-item" flex="">
				<td style="text-align: left">{{section.Name}}</td>
				<td>
					<i class="material-icons2 btn-primary" style="float:right; margin-right:10px" ng-click="SectionsCtrl.showConfirm($event,section)">delete</i>
					<a class="material-icons2 btn-primary" ng-href="#/editSection/{{section.ID}}">mode_edit</a>				
				</td>
			</tr>
		</tbody>
	</table>
</div>
