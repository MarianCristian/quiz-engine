
<div class="container" style="margin-top: 20px;">
    <div class="col-md-12">
        <div class="col-md-6" ng-show="questionCtrl.editedQuestion">
            <h2>Question #{{questionCtrl.editedQuestion.Number}}</h2>
        </div>
        <div class="col-md-6">
            <md-button class="md-raised col-md-2 pull-right qubiz-color" ng-click="questionCtrl.resetFields()">
                <i class="material-icons" style="margin-top: 12px;">refresh</i>
            </md-button>
            <md-button class="md-raised col-md-2 pull-right qubiz-color" ng-click="questionCtrl.cancelEdit()">
                <i class="material-icons" style="margin-top: 12px;">cancel</i>
            </md-button>
            <md-button class="md-raised col-md-2 pull-right qubiz-color" ng-click="questionCtrl.saveEdit()">
                <i class="material-icons" style="margin-top: 12px;">save</i>
            </md-button>
        </div>
    </div>
    <div class="col-md-12">
        <div class="col-md-8">
            <textarea name="QuestionText" ck-editor ng-model="questionCtrl.editedQuestion.QuestionText" style="width: 500px;"></textarea>
        </div>
        <div class="col-md-4">
            <div class="col-md-12 form-group">
                <label class="col-md-12" for="Section">Section: </label>
                <div class="col-md-12">
                    <select class="form-control" id="Section" ng-model="questionCtrl.editedQuestion.SectionID" ng-options="section.ID as section.Name for section in questionCtrl.Sections">
                        <option value="">-- Select one --</option>
                    </select>
                </div>
            </div>
            <div class="col-md-12 form-group">
                <label for="Complexity" class="col-md-12">Complexity: </label>
                <div class="col-md-12">
                    <input id="Complexity" type="number" class="form-control" min="0" max="10" ng-model="questionCtrl.editedQuestion.Complexity">
                </div>
            </div>
            <div class="col-md-12 form-group">
                <label for="Type" class="col-md-12">Type: </label>
                <div class="col-md-12">
                    <select class="form-control" ng-model="questionCtrl.editedQuestion.Type" ng-change="questionCtrl.typeChanged()">
                        <option value="0">Single select</option>
                        <option value="1">Multi select</option>
                    </select>
                </div>
            </div>
        </div>
    </div>
    <div class="col-md-12">
        <table class="mdl-data-table mdl-js-data-table col-md-12">
            <thead>
                <tr>
                    <th><h4 class="pull-left">Options:</h4></th>
                </tr>
            </thead>
            <tbody>
                <tr ng-repeat="option in questionCtrl.editedQuestion.Options">
                    <td>
                        <div class="col-md-1">
                            <md-button class="md-raised col-md-11 pull-left qubiz-color" ng-click="questionCtrl.setCorrectOption(option)">
                                <i class="material-icons" ng-if="option.IsCorrectAnswer && questionCtrl.editedQuestion.Type == 0" style="margin-top: 12px;">radio_button_checked</i>
                                <i class="material-icons" ng-if="!option.IsCorrectAnswer && questionCtrl.editedQuestion.Type == 0" style="margin-top: 12px;">radio_button_unchecked</i>
                                <i class="material-icons" ng-if="option.IsCorrectAnswer && questionCtrl.editedQuestion.Type == 1" style="margin-top: 12px;">check_box</i>
                                <i class="material-icons" ng-if="!option.IsCorrectAnswer && questionCtrl.editedQuestion.Type == 1" style="margin-top: 12px;">check_box_outline_blank</i>
                            </md-button>
                        </div>
                        <div class="col-md-9">
                            <textarea ck-editor ng-model="option.Answer"></textarea>
                        </div>
                        <md-button class="md-raised col-md-1 pull-right qubiz-color" ng-click="questionCtrl.removeOption(option)">
                            <i class="material-icons" style="margin-top: 12px;">cancel</i>
                        </md-button>
                    </td>
                </tr>
            </tbody>
        </table>
    </div>
    <md-button class="md-raised col-md-4 col-md-offset-4 qubiz-color" ng-click="questionCtrl.addOption()">
        <i class="material-icons" style="margin-top: 12px;">add</i>
    </md-button>
</div>