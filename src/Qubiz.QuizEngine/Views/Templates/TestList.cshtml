<div class="col-md-5">
    <div class="row">
        <div class="input-group">
            <input class="form-control" ng-model="Filter" />
            <span class="input-group-btn">
                <button class="btn btn-primary" ng-click="SearchTests()"><span class="glyphicon glyphicon-search"></span> Search</button>
                <button class="btn btn-primary" ng-click="CreateTest()"><span class="glyphicon glyphicon-edit"></span> Create</button>
            </span>
        </div>
    </div>
</div>
<div class="col-md-12">
    <div class="row">
        <p class="text-success col-md-3"><b>{{Tests.Items.length}}</b> of <b>{{Tests.TotalCount}}</b> items displayed.</p>
    </div>
    <div class="col-md-3">
        <div class="row" ng-repeat="test in Tests.Items">
            <div class="btn btn-default" style="padding:0; width:100%;">
                <div class="col-md-12" style="padding-right:0;">
                    <div class="col-md-8" style="padding:0; padding-top:9px; text-align:left;">
                        <b>{{test.Title}}</b>
                    </div>
                    <div class="col-md-2" style="padding:0;">
                        <button class="btn btn-primary" style="width:100%; height:100%;" ng-click="SelectedTestChanged(test)">
                            <span class="glyphicon glyphicon-pencil"></span>
                        </button>
                    </div>
                    <div class="col-md-2" style="padding:0;">
                        <a class="btn btn-primary" style="width:100%; height:100%;" ng-disabled="!(test.IsPublished && test.ID)" ng-href="#/StartExam/{{test.ID}}">
                            <span class="glyphicon glyphicon-play"></span>
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div id="editor" class="col-md-9" style="border-left:1px solid #cccccc">
        <test-editor test="SelectedTest"></test-editor>
    </div>
</div>
